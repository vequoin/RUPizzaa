<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.group27.RUPizza.MainController">

    <!-- Title -->
    <top>
        <HBox alignment="CENTER">
            <Label text="RU Pizza" style="-fx-font-size: 24px; -fx-alignment: center" />
        </HBox>
    </top>

    <!-- Side Menu Buttons and Images -->
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 30; -fx-border-color: black; -fx-border-width: 2; -fx-background-color: #f0f0f0;
">
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <!-- First Button and Image -->
            <VBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <ImageView fx:id="imgSpecialty" fitWidth="160" fitHeight="160" preserveRatio="true" />
                <Button text="Order Specialty Pizzas" fx:id="btnSpecialty" maxWidth="1.E8" maxHeight="1.E8" style="-fx-background-color: #ffa500; -fx-text-fill: white; -fx-font-size: 12px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" />
            </VBox>

            <!-- Second Button and Image -->
            <VBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <ImageView fx:id="imgCustom" fitWidth="160" fitHeight="160" preserveRatio="true" />
                <Button text="Build Your Own Pizza" fx:id="btnCustom" maxWidth="1.0E8" style="-fx-background-color: #ffa500; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" />
            </VBox>

            <!-- Third Button and Image -->
            <VBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <ImageView fx:id="imgCurrentOrder" fitWidth="160" fitHeight="160" preserveRatio="true" />
                <Button text="Browse Current Order" fx:id="btnCurrentOrder" maxWidth="1.0E8" style="-fx-background-color: #ffa500; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" />
            </VBox>

            <!-- Fourth Button and Image -->
            <VBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <ImageView fx:id="imgStoreOrders" fitWidth="160" fitHeight="160" preserveRatio="true" />
                <Button text="Browse Store Orders" fx:id="btnStoreOrders" maxWidth="1.0E8" style="-fx-background-color: #ffa500; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" />
            </VBox>
        </GridPane>
    </center>

    <!-- Status Bar at Bottom -->
    <bottom>
        <HBox>
            <Label text="Status: Ready" />
            <!-- Additional status bar elements here -->
        </HBox>
    </bottom>
</BorderPane>
